  "keywords": [
    "mcp",
    "context-window",
    "sandbox",
    "code-execution",
    "fts5",
    "bm25",
    "playwright",
    "context-optimization"
  ],
  "logo": "assets/logo.svg",
  "skills": "./skills/",
  "hooks": {
    "version": 1,
    "hooks": {
      "preToolUse": [
        { "command": "./hooks/pretooluse-cursor.sh", "matcher": "Shell" },
        { "command": "./hooks/pretooluse-cursor.sh", "matcher": "Read" },
        { "command": "./hooks/pretooluse-cursor.sh", "matcher": "Grep" },
        { "command": "./hooks/pretooluse-cursor.sh", "matcher": "Task" },
        { "command": "./hooks/pretooluse-cursor.sh", "matcher": "WebFetch" }
      ]
    }
  },
  "mcpServers": {
    "context-mode": {
      "command": "npx",
      "args": ["-y", "context-mode"]
    }
  }
}
